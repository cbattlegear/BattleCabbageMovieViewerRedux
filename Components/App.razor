@using BattleCabbageMovieViewer.Components
@inject IHttpContextAccessor HttpContextAccessor

@{
    var themeCookie = HttpContextAccessor.HttpContext?.Request.Cookies["theme"];
    var isDark = themeCookie != "light"; // Default to dark if no cookie
    var themeClass = isDark ? "dark" : "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0D0D0F" />
    <base href="/" />

    <!-- Theme initialization handled server-side via cookie -->

    <ResourcePreloader />

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Tailwind CSS (utilities + custom theme) -->
    <link rel="stylesheet" href="@Assets["css/tailwind.css"]" />
    <!-- QuickGrid styles -->
    <link rel="stylesheet" href="@Assets["css/quickgrid.css"]" />

    <!-- Component scoped styles (will be removed after migration) -->
    <link rel="stylesheet" href="@Assets["BattleCabbageMovieViewer.styles.css"]" />

    <!-- Theme manager for toggle functionality -->
    <script src="js/theme.js"></script>

    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body class="font-sans min-h-screen antialiased">
    <div id="theme-root" class="min-h-screen @themeClass">
        <Routes />
    </div>
    <ReconnectModal />
    <script src="@Assets["_framework/blazor.web.js"]"></script>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@0.469.0/dist/umd/lucide.min.js"></script>
    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Expose for Blazor to call after dynamic content updates
        window.initializeLucideIcons = function() {
            lucide.createIcons();
        };

        // Re-initialize icons after Blazor enhanced navigation
        if (typeof Blazor !== 'undefined') {
            Blazor.addEventListener('enhancedload', function() {
                lucide.createIcons();
            });
        }
    </script>
</body>

</html>
